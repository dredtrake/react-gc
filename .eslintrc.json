{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "eqeqeq": "error",
    "no-alert": "error",
    "no-console": "warn",
    "no-eval": "error",
    "jsx-quotes": ["error", "prefer-double"],
    "no-trailing-spaces": "error",
    // "camelCase": "error",
    "comma-dangle": ["error", "only-multiline"],
    "max-len": ["error", 150],
    "prefer-destructuring": ["error", {
      "array": true,
      "object": true
    }, {
      "enforceForRenamedProperties": false
    }],
    "require-await": "error",
    "eol-last": ["error", "always"]
  }
}
